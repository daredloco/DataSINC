<Window x:Class="DataSINC.AddPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataSINC"
        mc:Ignorable="d"
        Title="AddPopup" Height="125" Width="250" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Name="l_title" Content="Test" HorizontalAlignment="Center"/>
            <TextBox Name="tb_name" Width="150"></TextBox>
            <Button Name="bt_add" Content="Add" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
